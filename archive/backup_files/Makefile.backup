validate-alpha-config: ## Validate alpha model configuration
	@echo "‚öôÔ∏è  Validating alpha model configuration..."
	python -c "
import yaml
import os

config_file = 'src/config/base_config.yaml'
if os.path.exists(config_file):
    with open(config_file, 'r') as f:
	config = yaml.safe_load(f)
    
    alpha_models = config.get('alpha_models', {})
    
    print('‚öôÔ∏è  Alpha Model Configuration:')
    print()
    
    # Check OBP config
    obp_config = alpha_models.get('ob_pressure', {})
    print('üìä OBP Configuration:')
    print(f'  ‚Ä¢ Enabled: {obp_config.get(\"enabled\", False)}')
    print(f'  ‚Ä¢ Edge scaling: {obp_config.get(\"edge_scaling\", \"N/A\")}')
    print(f'  ‚Ä¢ Target symbols: {len(obp_config.get(\"target_symbols\", []))} symbols')
    
    # Check MAM config
    mam_config = alpha_models.get('ma_momentum', {})
    print()
    print('üìä MAM Configuration:')
    print(f'  ‚Ä¢ Enabled: {mam_config.get(\"enabled\", False)}')
    print(f'  ‚Ä¢ Edge scaling: {mam_config.get(\"edge_scaling\", \"N/A\")}')
    print(f'  ‚Ä¢ Short period: {mam_config.get(\"short_period\", \"N/A\")}')
    print(f'  ‚Ä¢ Long period: {mam_config.get(\"long_period\", \"N/A\")}')
    
    # Check ensemble config
    ensemble = config.get('ensemble', {}).get('meta_learner', {})
    print()
    print('üîÄ Ensemble Configuration:')
    print(f'  ‚Ä¢ Method: {ensemble.get(\"method\", \"N/A\")}')
    print(f'  ‚Ä¢ Logistic weights: {ensemble.get(\"logistic_weights\", \"N/A\")}')
    
    print()
    print('‚úÖ Configuration validation complete!')
else:
    print('‚ùå Configuration file not found!')
    exit(1)
"

