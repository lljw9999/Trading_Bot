# Trading System Environment Configuration

# ======================================================
# Model Registry & HuggingFace Hub
# ======================================================
# HuggingFace Hub token for model downloads
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=

# ======================================================
# Market Data APIs
# ======================================================
# Coinbase Pro API (for crypto data)
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_PASSPHRASE=

# Binance API (for crypto data)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Alpaca API (for stock data)
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading by default

# NOWNodes WebSocket (for crypto data)
NOWNODES_API_TOKEN=

# iTick API (for A-share data)
ITICK_TOKEN=

# ======================================================
# Cloud Storage
# ======================================================
# AWS S3 for model storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_MODEL_BUCKET=trading-models

# ======================================================
# OpenAI (for sentiment analysis)
# ======================================================
OPENAI_API_KEY=

# ======================================================
# Reddit API (for sentiment data)
# ======================================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=TradingSystemBot/1.0

# ======================================================
# Database Configuration
# ======================================================
# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=trading-org
INFLUXDB_BUCKET=trading-data

# Redis
REDIS_URL=redis://localhost:6379/0

# ======================================================
# Kafka/Redpanda
# ======================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ======================================================
# Monitoring
# ======================================================
# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin123

# ======================================================
# Trading Configuration
# ======================================================
# Portfolio settings
INITIAL_PORTFOLIO_VALUE=100000
MAX_POSITION_SIZE=0.25  # 25% max position size
KELLY_FRACTION=0.25     # Quarter Kelly sizing
MIN_TRADE_SIZE=10       # Minimum $10 trade

# Risk management
MAX_DRAWDOWN_PCT=0.03   # 3% max drawdown
VOL_MULTIPLIER_LIMIT=4.0  # 4x volatility circuit breaker

# ======================================================
# Logging
# ======================================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log

# ======================================================
# Development Settings
# ======================================================
# Set to 'true' for development mode
DEV_MODE=true

# Paper trading (set to 'false' for live trading)
PAPER_TRADING=true

# Metrics server port
METRICS_PORT=8000 